#include "ft_fillit.h"
#include <string.h>

int		ft_strlen(const char *str)
{
	int		i;

	i = 0;
	while (str[i] != '\0')
		i++;
	return (i);
}

char	*ft_strncat(char *s1, const char *s2, int n)
{
	int		len;
	int		i;

	i = 0;
	len = 0;
	while (s1[len] != '\0')
		len++;
	while ((s1[len + i] = s2[i]) != '\0' && i < n)
		i++;
	s1[len + i] = '\0';
	return (s1);
}

char	*ft_strcpy(char *dst, const char *src)
{
	char	*str;

	if (!src)
		return (NULL);
	str = dst;
	while ((*str++ = *src++) != '\0')
		;
	return (dst);
}

char	*ft_atoa(char *str)
{
	return (str);
}
